{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "rootDirs": [
      "./src"
    ],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "types": [
      "jest",
      "node"
    ]
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "./src",
    "./test"
  ]
}
